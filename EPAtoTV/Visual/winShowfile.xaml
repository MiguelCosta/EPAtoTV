<Window x:Class="EPAtoTV.Visual.winShowfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File" Height="600" Width="700" Icon="Resources/icon/Others/Preview.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <RichTextBox x:Name="txtFileContent" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" IsReadOnly="True" FontFamily="Consolas" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
