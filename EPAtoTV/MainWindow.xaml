<Window x:Class="DiogoSousa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diogo Sousa" Height="700" Width="1000" WindowState="Maximized" WindowStartupLocation="CenterScreen" Icon="Visual/Resources/icon/Windows8MetroUI/Excel-Metro.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF83A9F9" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <ToolBar Name="tbrMenu" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="57">
            <Button Name="btnOpenFile" Content="" ToolTip="Abrir ficheiro" VerticalAlignment="Stretch" Width="72">
                <Button.Foreground>
                    <ImageBrush ImageSource="Visual/Resources/png/Windows8MetroUI/Documents-Metro.PNG" Stretch="Uniform"/>
                </Button.Foreground>
                <Button.Background>
                    <ImageBrush ImageSource="Visual/Resources/png/Windows8MetroUI/Documents-Metro.PNG" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </ToolBar>

    </Grid>
</Window>
